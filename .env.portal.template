# Ring Platform Portal Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================

NEXT_PUBLIC_BASE_URL=https://ringplatform.org
NODE_ENV=development
DEBUG_MODE=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/ring_portal

# Fallback Database (Firebase)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ============================================================================
# AUTHENTICATION
# ============================================================================

NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# WEB3 INTEGRATION
# ============================================================================

# Ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
INFURA_PROJECT_ID=your-infura-project-id

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Smart Contracts
JWT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
RING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================

# WayForPay
WAYFORPAY_MERCHANT_ID=your-wayforpay-merchant-id
WAYFORPAY_SECRET_KEY=your-wayforpay-secret-key
WAYFORPAY_API_URL=https://api.wayforpay.com/api

# ============================================================================
# AI SERVICES
# ============================================================================

# AI Matcher
AI_MATCHER_API_URL=https://api.ai-matcher.ringplatform.org
AI_MATCHER_API_KEY=your-ai-matcher-api-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# REAL-TIME COMMUNICATION
# ============================================================================

# WebSocket
WS_URL=wss://api.ringplatform.org

# ============================================================================
# FILE STORAGE
# ============================================================================

# Vercel Blob (Primary)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# AWS S3 (Fallback)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Google Analytics
GA_TRACKING_ID=GA-MEASUREMENT-ID

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Amplitude
AMPLITUDE_API_KEY=your-amplitude-api-key

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# DataDog
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key

# ============================================================================
# COMMUNICATION
# ============================================================================

# Email (Resend)
RESEND_API_KEY=your-resend-api-key

# Webhooks
WEBHOOK_SECRET=your-webhook-secret

# ============================================================================
# SECURITY
# ============================================================================

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================================================
# EXTERNAL APIs
# ============================================================================

# API Base URL
API_BASE_URL=https://api.ringplatform.org

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Local development overrides
NEXT_PUBLIC_LOCAL_API_URL=http://localhost:3001
NEXT_PUBLIC_LOCAL_WS_URL=ws://localhost:3001

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features for development
FEATURE_OPPORTUNITIES=true
FEATURE_MARKETPLACE=true
FEATURE_DOCUMENTATION=true
FEATURE_NETWORKING=true
FEATURE_MESSAGING=true
FEATURE_WALLET=true
FEATURE_AI_MATCHER=true
FEATURE_WEB3_INTEGRATION=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis (if available)
REDIS_URL=redis://localhost:6379

# Cache TTL settings
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# ============================================================================
# LOGGING
# ============================================================================

# Log levels
LOG_LEVEL=info
LOG_FILE=./logs/ring-portal.log

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Database backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# COMPLIANCE
# ============================================================================

# GDPR compliance
GDPR_ENABLED=true
COOKIE_CONSENT_ENABLED=true

# ============================================================================
# CDN CONFIGURATION
# ============================================================================

# CDN settings for static assets
CDN_ENABLED=true
CDN_URL=https://cdn.ringplatform.org

# ============================================================================
# SOCIAL MEDIA
# ============================================================================

# Social media integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-slack-webhook

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Push notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Enable experimental features (use with caution)
EXPERIMENTAL_AI_INSIGHTS=false
EXPERIMENTAL_BLOCKCHAIN_ANALYTICS=false
EXPERIMENTAL_SOCIAL_GRAPH=false
